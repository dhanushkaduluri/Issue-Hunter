<head>
  <style>
    .card {
      background: linear-gradient(90deg, #e3ffe7 0%, #d9e7ff 100%);
    }
  </style>
</head>

<body>
  <!-- Your HTML code here -->
  <div class="mb-5 p-5">
    <% for( let project of projects ) { %>
      <div class="card mb-2 w-60 m-auto" style="background: whitesmoke; box-shadow: 0 0 5px 4px rgb(7, 50, 240);">
        <div class="card-header">
          <strong style="color: green; font-size: larger;"> Name of the project : </strong>
          <strong style="color: rgb(63, 48, 196);font-size: larger;"><%= project.name %></strong>
        </div>
        <div class="card-body">

          <p class="card-text">
            <strong> Description : </strong>
            <%= project.description %>
          </p>

          <h6 class="card-subtitle mb-2 text-muted">
            <strong> Author : </strong>
            <%= project.author %>
          </h6>
          

          <div class="m-auto text-end">
            <a href="/project/<%=project._id%>" class="btn btn-primary m-auto">Open project</a>
          </div>
        </div>
      </div>
      <% } %>
  </div>
</body>